<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.TextFlow?>

<HBox maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="gravitrips.client.GameController">
   <children>
      <VBox prefHeight="200.0" prefWidth="200.0">
         <children>
            <ScrollPane hbarPolicy="NEVER" minViewportHeight="270.0" pannable="true" prefHeight="270.0" prefWidth="400.0">
               <content>
                  <AnchorPane minHeight="0.0" minWidth="0.0" prefWidth="400.0">
                     <children>
                        <TextFlow fx:id="messages" lineSpacing="2.0" prefWidth="400.0">
                           <opaqueInsets>
                              <Insets />
                           </opaqueInsets>
                        </TextFlow>
                     </children>
                  </AnchorPane>
               </content>
            </ScrollPane>
            <HBox alignment="CENTER" prefHeight="130.0" prefWidth="400.0">
               <children>
                  <TextField fx:id="gamemessage" alignment="TOP_LEFT" onAction="#onEnter" prefHeight="100.0" prefWidth="120.0">
                     <font>
                        <Font size="14.0" />
                     </font>
                  </TextField>
                  <VBox alignment="CENTER" prefHeight="200.0" prefWidth="75.0">
                     <children>
                        <Button mnemonicParsing="false" onAction="#send" prefWidth="58.0" text="Send">
                           <font>
                              <Font size="14.0" />
                           </font>
                           <padding>
                              <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
                           </padding>
                        </Button>
                        <Button fx:id="readyBtn" mnemonicParsing="false" onAction="#ready" prefWidth="58.0" text="Ready">
                           <font>
                              <Font size="14.0" />
                           </font>
                           <VBox.margin>
                              <Insets bottom="4.0" top="4.0" />
                           </VBox.margin>
                        </Button>
                        <Button mnemonicParsing="false" onAction="#quit" prefWidth="58.0" text="Quit">
                           <font>
                              <Font size="14.0" />
                           </font>
                        </Button>
                     </children>
                  </VBox>
               </children>
            </HBox>
         </children>
      </VBox>
      <StackPane>
         <children>
            <VBox prefHeight="400.0" prefWidth="400.0">
               <children>
                  <StackPane fx:id="gameField" prefHeight="400.0" prefWidth="400.0" />
               </children>
            </VBox>
            <Label fx:id="label" />
         </children>
      </StackPane>
   </children>
</HBox>
